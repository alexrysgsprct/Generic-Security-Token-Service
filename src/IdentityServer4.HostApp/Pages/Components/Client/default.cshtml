@model IdentityServer4Extras.ClientExtra

<div>
    @if(Model != null)
    {

        var secrets = from item in Model.ClientSecrets
            select item.Value;
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Featured Client</div>
   

            <!-- Table -->
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@nameof(Model.ClientId)</td>
                        <td>@Model.ClientId</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.Enabled)</td>
                        <td>@Model.Enabled</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.ClientSecrets)</td>
                        <td>...</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.AllowedScopes)</td>
                        <td>@string.Join(" | ", Model.AllowedScopes)</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.AllowedGrantTypes)</td>
                        <td>@string.Join(" | ", Model.AllowedGrantTypes)</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.AccessTokenLifetime)</td>
                        <td>@Model.AccessTokenLifetime</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.AbsoluteRefreshTokenLifetime)</td>
                        <td>@Model.AbsoluteRefreshTokenLifetime</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.SlidingRefreshTokenLifetime)</td>
                        <td>@Model.SlidingRefreshTokenLifetime</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.RefreshTokenUsage)</td>
                        <td>@Model.RefreshTokenUsage</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.AccessTokenType)</td>
                        <td>@Model.AccessTokenType</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.AllowOfflineAccess)</td>
                        <td>@Model.AllowOfflineAccess</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.RequireClientSecret)</td>
                        <td>@Model.RequireClientSecret</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.RequireRefreshClientSecret)</td>
                        <td>@Model.RequireRefreshClientSecret</td>
                    </tr>
                    <tr>
                        <td>@nameof(Model.ClientClaimsPrefix)</td>
                        <td>@Model.ClientClaimsPrefix</td>
                    </tr>
                </tbody>

            </table>
        </div>
    }
</div>

